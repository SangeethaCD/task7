{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
   "include": ["src/**/*"]
}
